<div class="customer">
  <%= image_tag customer.image %>
  <div class="customer-info">
    <h3><%= customer.full_name %></h3>
    <p><%= customer.phone_number %></p>
    <p><%= customer.email %></p>
    <p><strong>Province: </strong><%= customer.province&.name || 'None' %></p>
    <p><strong>Notes:</strong> <%= customer.notes%></p>
  </div>
</div>